<!DOCTYPE html>
<html>

<head>
  <meta charset="utf-8">
  <title>Messages</title>
  <link rel="stylesheet" type="text/css" href="/css/style.css">
</head>

<body>
  <div class="container">

    <div class="wrapNavBar">
      <%- include('partials/navbar.ejs') %>
    </div>

    <div class="post-handler">

      <div class="heading1">
        <h1>Blog</h1>
      </div>

      <div class="messages">
        <% for(var i = 0; i < data.length; i++) { %>
          <div class="wrapper"  data-Post=<%=data[i].id %>>
            <div class="messageCircle">
              <h2><%= data[i].subject %> </h2>
              <p> <%=  data[i].message %> </p>
            </div>
          </div>
          <% } %>
      </div>

    </div>

  </div>

  <%- include('partials/footer.ejs') %>

</body>

</html>
